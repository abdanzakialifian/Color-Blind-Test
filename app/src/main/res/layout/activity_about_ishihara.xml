<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.about.AboutIshiharaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_about_ishihara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:text="@string/about_ishihara"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:text="@string/introduction"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_about_ishihara" />

            <TextView
                android:id="@+id/tv_main_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nsemibold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="@string/ishihara_pengantar"
                android:textColor="@color/brown"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_introduction"
                tools:targetApi="p" />

            <View
                android:id="@+id/space_one"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_main_introduction" />

            <TextView
                android:id="@+id/tv_how_to_use_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:text="@string/how_to_use_test"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_one" />

            <TextView
                android:id="@+id/tv_how_to_test_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nsemibold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="@string/ishihara_how_to_test"
                android:textColor="@color/brown"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_how_to_use_test"
                tools:targetApi="o" />

            <View
                android:id="@+id/space_two"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_how_to_test_main" />

            <TextView
                android:id="@+id/tv_title_plate_fourteen_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:text="@string/title_plate_fourteen_description"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_two" />

            <TextView
                android:id="@+id/tv_plate_fourteen_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nsemibold"
                android:lineSpacingExtra="4dp"
                android:text="@string/plate_fourteen_description"
                android:textAlignment="textStart"
                android:textColor="@color/brown"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_plate_fourteen_description" />

            <View
                android:id="@+id/space_three"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plate_fourteen_description" />

            <TextView
                android:id="@+id/tv_answer_plate_fourteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:justificationMode="inter_word"
                android:text="@string/answer_plate_fourteen"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_three"
                tools:targetApi="o" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_table_plate_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/plate_answer_table_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_answer_plate_fourteen" />

            <View
                android:id="@+id/space_four"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_table_plate_14" />

            <TextView
                android:id="@+id/tv_title_plate_twenty_four_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:text="@string/title_plate_twenty_four_description"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_four" />

            <TextView
                android:id="@+id/tv_plate_twenty_four_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nsemibold"
                android:lineSpacingExtra="4dp"
                android:text="@string/plate_twenty_four_description"
                android:textAlignment="textStart"
                android:textColor="@color/brown"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_plate_twenty_four_description" />

            <View
                android:id="@+id/space_five"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plate_twenty_four_description" />

            <TextView
                android:id="@+id/tv_answer_plate_twenty_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:justificationMode="inter_word"
                android:text="@string/answer_plate_twenty_four"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_five"
                tools:targetApi="o" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_table_plate_24"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/plate_answer_table_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_answer_plate_twenty_four" />

            <View
                android:id="@+id/space_six"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_table_plate_24" />

            <TextView
                android:id="@+id/tv_title_plate_thirty_eight_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:text="@string/title_plate_thirty_eight_description"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_six" />

            <TextView
                android:id="@+id/tv_plate_thirty_eight_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nsemibold"
                android:lineSpacingExtra="4dp"
                android:text="@string/plate_thirty_eight_description"
                android:textAlignment="textStart"
                android:textColor="@color/brown"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_plate_thirty_eight_description" />

            <View
                android:id="@+id/space_seven"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plate_thirty_eight_description" />

            <TextView
                android:id="@+id/tv_answer_plate_thirty_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nblack"
                android:justificationMode="inter_word"
                android:text="@string/answer_plate_thirty_eight"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_seven"
                tools:targetApi="o" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_table_plate_38"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginHorizontal="20dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/plate_answer_table_38"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_answer_plate_thirty_eight" />

            <TextView
                android:id="@+id/tv_main_answer_each_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/nsemibold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="@string/ishihara_jawaban_setiap_piring"
                android:textColor="#3b3738"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_table_plate_38"
                tools:targetApi="o" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_plus"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_blue_rounded_5"
        android:padding="4dp"
        android:src="@drawable/ic_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

